<!DOCTYPE html>
<html>
<head>
  <title>Main-Student</title>
  <link rel="icon" type="image/png" sizes="128x128" href="../assets/id-card.png">
 
  <link rel="stylesheet" type="text/css" href="Home.css">
</head>
<body>

<div class="navbar">
  <div class="logo">
    <img src="../assets/id-card.png" alt="Logo">
  </div>
  <div class="user-info">
    <p id="hello-name">Hello, Name</p>
  </div>
  <div class="logout">
    <button onclick="logout()">Logout</button>
  </div>
</div>

<div class="content">
  <div class="card-status">
    <p>Card Status: <span id="card-status">Inactive</span></p>
    <button onclick="activateCard()">Activate Card</button>
    <button onclick="deactivateCard()">Deactivate Card</button>
  </div>
  <br>
  <br>
  <table>
    <tr>
      <th>Doctor Name</th>
      <th>Diagnosis</th>
      <th>Prescription - Medicine Name</th>
      <th>Status</th>
    </tr>
    <!-- These data u need to print from backend-->
  </table>
</div>

<script>
  // Fetch user info from a backend API
  fetch('your_backend_api_url')
    .then(response => response.json())
    .then(data => {
      document.getElementById('hello-name').textContent = `Hello, ${data.name}`;
    });

  function activateCard() {
    document.getElementById('card-status').textContent = 'Active';
  }

  function deactivateCard() {
    document.getElementById('card-status').textContent = 'Inactive';
  }

  function logout() {
    // add later with backend
  }
</script>

</body>
</html>
